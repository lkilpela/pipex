	"version": "0.2.0",
	"configurations": [
		{
			"name": "(lldb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/pipex",
			"args": ["infile.txt", "./libft/", "ls", "outfile"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [{ "name": "PATH", "value": "/usr/bin" }],
			"externalConsole": false,
			"MIMode": "lldb"
		}
	]
}