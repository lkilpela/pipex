{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/pipex",
            "args": [
                "infile",
                "/bin/ls",
                "/bin/cat",
                "outfile"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "/usr/bin"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb"
        },
    ]
}